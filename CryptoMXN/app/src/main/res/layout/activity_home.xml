<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".home">

    <TextView
        android:text="BTC"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/Tbtc"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ETH"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Teth"
        android:layout_below="@+id/Tbtc"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="XRP"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Txrp"
        android:layout_below="@+id/Teth"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:text="BCH"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tbch"
        android:layout_below="@+id/Txrp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="ETH_BTC"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tethb"
        android:layout_below="@+id/Tbch"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="XRP_BTC"
        android:textSize="20dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Txrpb"
        android:layout_below="@+id/Tethb"
        android:layout_alignStart="@+id/Tethb"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Monto"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txm"
        android:layout_below="@+id/Txrpb"/>

   <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_below="@+id/txm"
        android:layout_alignParentStart="true"
        android:id="@+id/monto"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Moneda"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tmon"
        android:layout_below="@+id/monto"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/coins"
        android:layout_below="@+id/tmon"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="-"
        android:textSize="30dp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/res"
        android:layout_below="@+id/button"
        android:layout_alignStart="@+id/Tethb"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Convertir"
        android:onClick="convierte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_below="@+id/coins"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>